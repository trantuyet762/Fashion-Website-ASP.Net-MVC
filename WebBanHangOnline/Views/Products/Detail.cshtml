@model WebBanHangOnline.Models.EF.Product
@{
    ViewBag.Title = "Chi tiết sản phẩm";
}
<link href="~/Content/assets/styles/detail_styles.css" rel="stylesheet" />

<link type="text/css" href="~/Content/assets/styles/single_responsive1.css" rel="stylesheet" />
@if (Model != null)
{
    <div class="container single_product_container" id="productId" data-id="@Model.id">
        <div class="row">
            <div class="col">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/danh-muc-san-pham/@Model.ProductCategory.Alias-@Model.ProductCategoryID"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.ProductCategory.Title</a></li>
                        <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>@Model.Title</a></li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-lg-7">
                @if (Model.ProductImage != null && Model.ProductImage.Any())
                {
                    <div class="single_product_pics">
                        <div class="row">
                            <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
                                <div class="single_product_thumbnails">
                                    <ul>
                                        @foreach (var item in Model.ProductImage)
                                        {
                                            if (item.IsDefault)
                                            {
                                                <li><img src="@item.Image" alt="" class="active" data-image="@item.Image"></li>
                                            }
                                            else
                                            {
                                                <li><img src="@item.Image" alt="" data-image="@item.Image"></li>
                                            }

                                        }

                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-9 image_col order-lg-2 order-1">
                                <div class="single_product_image">
                                    <div class="single_product_image_background" style="background-image:url(@Model.ProductImage.FirstOrDefault(x=>x.IsDefault).Image"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-5">
                <div class="product_details">
                    <div class="product_details_title">
                        <h2>@Model.Title</h2>
                        <p>@Model.Description</p>

                    </div>
                    <div class="free_delivery d-flex flex-row align-items-center justify-content-center">
                        <span class="ti-truck"></span><span>free delivery</span>
                    </div>
                    <hr />
                    <p>Lượt xem: <b>@Model.ViewCount</b><i class="fa fa-eye" aria-hidden="true" style="padding-left: 5px;"></i></p>
                    @if (Model.PriceSale < Model.Price)
                    {
                        <div class="original_price">@WebBanHangOnline.Common.Common.FormatNumber(Model.Price, 0)</div>
                        <div class="product_price">@WebBanHangOnline.Common.Common.FormatNumber(Model.PriceSale, 0)</div>
                    }
                    else
                    {
                        <div class="product_price">@WebBanHangOnline.Common.Common.FormatNumber(Model.Price, 0)</div>
                    }

                    <ul class="star_rating">
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                    </ul>
                    <hr />
                    <div class="product-detail-size">
                        <label for="size">Chọn Size:</label>
                        <select id="size" name="size">
                            <option value="">-- Chọn size --</option>
                            @foreach (var productSize in Model.ProductQuantities)
                            {
                                <option id="size_@productSize.SizeId" value="@productSize.SizeId" data-id="@productSize.SizeId" data-name="@productSize.Size.SizeName" >@productSize.Size.SizeName</option>
                            }
                        </select>
                    </div>
                    <hr />

                    <div class="product-detail-color">
                        <label for="color">Chọn màu:</label>
                        <select id="color" name="color">
                            <option value="">-- Chọn màu --</option>
                            @foreach (var productColor in Model.ProductQuantities)
                            {
                                <option  id="color_@productColor.ColorId" value="@productColor.ColorId" data-id="@productColor.ColorId" data-name="@productColor.Color.ColorName" > @productColor.Color.ColorName</option>
                            }
                        </select>
                    </div>
                    <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
                        <span id="quantity-span">Quantity:</span>
                        <div class="quantity_selector">
                            <span id="productQuantity" data-quantity="@Model.ProductQuantities.FirstOrDefault().QuantityProduct" class="minus"><i class="fa fa-minus" aria-hidden="true"></i></span>
                            <span id="quantity_value">1</span>
                            <span class="plus"><i class="fa fa-plus" aria-hidden="true"></i></span>
                        </div>

                        <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@Model.id">Thêm vào giỏ hàng</a></div>
                        <div class="product_favorite d-flex flex-column align-items-center justify-content-center"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tabs_section_container">

            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="tabs_container">
                            <ul class="tabs d-flex flex-sm-row flex-column align-items-left align-items-md-center justify-content-center">
                                <li class="tab active" data-active-tab="tab_1"><span>Chi tiết sản phẩm</span></li>
                                @* <li class="tab" data-active-tab="tab_2"><span>Additional Information</span></li>*@
                                <li class="tab" data-active-tab="tab_3"><span>Đánh giá</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">

                        <!-- Tab Description -->

                        <div id="tab_1" class="tab_container active">
                            <div class="column">
                                @Html.Raw(Model.Detail)
                            </div>
                        </div>

                        <!-- Tab Additional Info -->
                        <!-- Tab Reviews -->

                        <div id="tab_3" class="tab_container">
                            <div class="row">

                                <!-- Add Review -->
                                <div class="col-md-12 reviews_col">

                                    @Html.Action("_Review", "Review", new { productId = Model.id })
                                </div>
                            </div>
                            <div class="row">

                                <!-- User Reviews -->

                                <div class="col-lg-6 reviews_col">
                                    @Html.Action("Load_Review", "Review", new { productId = Model.id })
                                </div>


                            </div>

                        </div>



                    </div>
                </div>
            </div>

        </div>
    </div>
}

@section scripts{

    <script src="~/Content/assets/js/single_custom1.js"></script>

}
